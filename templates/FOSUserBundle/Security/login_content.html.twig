{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group row">
        <label for="username" class="col-sm-2 col-form-label">{{ 'security.login.username'|trans }}</label>
        <div class="col-sm-10 offset-2">
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
        </div>
    </div>

    <div class="form-group row">
        <label for="password" class="col-sm-2 col-form-label">{{ 'security.login.password'|trans }}</label>
        <div class="col-sm-10 offset-2">
            <input type="password" id="password" name="_password" required="required" autocomplete="current-password" />
        </div>
    </div>

    <div class="form-group row">
        <label for="remember_me" class="col-sm-2 col-form-label">{{ 'security.login.remember_me'|trans }}</label>
        <div class="col-sm-10 offset-2">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        </div>
    </div>

    <div class="form-group row">
        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    </div>
</form>
