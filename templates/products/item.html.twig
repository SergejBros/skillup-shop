{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
    {% if vich_uploader_asset(product, 'image') %}
        <img src="{{ vich_uploader_asset(product, 'image') | imagine_filter('squared_thumbnail') }}" class="card-img-top" alt="{{ product.name }}">
    {%  endif %}
    <h1>{{ product.name }}</h1>
    <p>{{ product.price|money }}</p>
    <p>{{ product.description|nl2br }}</p>
    <a href="{{ path('orders_add_to_cart', {'id': product.id}) }}" class="btn btn-primary js-add-to-cart">Добавить в корзину</a>

{% endblock %}
