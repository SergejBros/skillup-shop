

<table class="table table-striped">
    <tr>
        <th>Товар</th>
        <th>Цена</th>
        <th>Количество</th>
        <th>Стоимость</th>
        <th></th>
    </tr>
    {% for item in cart.items %}
        <tr>
            <td>
                <a href="{{ path('products_item', {'id': item.product.id}) }}">
                    {{ item.product.name }}
                </a>
            </td>
            <td>{{ item.price|money }}</td>
            <td>{{ item.quantity }}</td>
            <td>{{ item.cost|money }}</td>
            <td>
                <a class="btn btn-danger btm-sm js-remove-item" href="{{ path('orders_remove_item', {'id': item.id}) }}">
                    <i class="fa fa-minus-circle"></i>
                </a>
            </td>
        </tr>
    {% endfor %}

    <tr>
        <th colspan="3">Всего</th>
        <th>{{ cart.amount|money }}</th>
        <th></th>
    </tr>
</table>